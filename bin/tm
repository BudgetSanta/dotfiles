#!/bin/bash

host=$(hostname | cut -d . -f 1 | tr '[:lower:]' '[:upper:]')

if [[ $# -eq 0 ]]; then

    tmux new-session -A -s "$host"

elif [[ $# -eq 1 && $1 == "ls" ]]; then

    if [[ $1 = "ls" ]]; then
        tmux ls
    else
        tmux new-session -A -s "$1"
    fi

else

    echo >&2 "Usage: $(basename $0) [ls | session-name]"

fi
